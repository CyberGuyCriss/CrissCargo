@model CrissCargoApp.ViewModel.QuotationViewModel

@{
    ViewData["Title"] = "PrepareQuotation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


 <main id="main" class="main">
    <div class="pagetitle">
        <h1> Prepare New Quotation</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Quotation</li>
            </ol>
        </nav>
    </div>

    <section class="section dashboard">
        <div class="card">
            <div class="card-header">
                <h3>Customer Quotation</h3>
            </div>
            <div class="card-body">
                <form class="form-inline">
                    <div class="container mt-3">
                        @*<div class="row ">*@

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label"><strong>Order No: </strong></label>
                            <div class="col-sm-8">
                                <input type="number" name="OrderNo" class="form-control" placeholder="Input product Name" />
                            </div>
                        </div>

                        <div class="form-group mt-2 row">
                            <label class="col-form-label col-sm-2"><strong>Details: </strong></label>
                            <div class="col-sm-8">
                                <input type="text" name="Details" class="form-control" placeholder="Paste product Link" />
                            </div>
                        </div>

                        <div class="form-group mt-2 row">
                            <label class="col-form-label col-sm-2"><strong>Total Amount: </strong></label>
                            <div class="col-sm-8">
                                <input type="text" name="TotalAmount" class="form-control" placeholder="Total quantity" />
                            </div>
                        </div>
                        <div class="form-group mt-2 row">
                            <label class="col-form-label col-sm-2"><strong>Order Status: </strong></label>
                            <div class="col-sm-8">
                                <input type="text" name="OrderStatus" class="form-control" placeholder="Eg 2white, 4black, 5Blue..." />
                            </div>
                        </div>
                       <div class="form-group mt-2 row">
                            <label class="col-form-label col-sm-2"><strong>Quotation Date: </strong></label>
                            <div class="col-sm-8">
                                <input type="datetime" name="QuotationDate" class="form-control" />
                            </div>
                        </div>
                        <div class="col-12 text-center m-3">
                            <button type="submit" class="btn btn-success col-2 btn-save">Add</button>
                            <button type="button" class="btn btn-danger col-2" onclick="clearField()">Clear</button>
                        </div>

                        @* </div>*@
                    </div>
                </form>
            </div>
        </div>
    </section>
 </main>