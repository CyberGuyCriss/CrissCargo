@model CrissCargoApp.Models.ApplicationUser

<div class="container-fluid">
    <div class="col-6 m-auto mt-3">
         <div class="card">
             <div class="card-header text-center bg-warning">
                  <h3>User To Be Edited</h3>
             </div>


             <div class="card-body">
                <form asp-controller="Admin" asp-action="EditPost" method="post">
                    <input asp-for="Id" hidden>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="text" class="form-control" asp-for="Email">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input type="text" class="form-control" asp-for="PhoneNumber">
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="DateCreated"></label>
                                <input type="text" class="form-control" asp-for="DateCreated" readonly>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input type="text" class="form-control" asp-for="Address">
                            </div>
                        </div>
                        <div class="text-center mt-2">

                            <button type="submit" class="btn btn-warning">Update</button>
                        </div>
                    </div>
                </form>
             </div>
         </div>
    </div>
</div>